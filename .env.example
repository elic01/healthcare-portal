# ======================================
# HEALTHCARE PORTAL
# Environment Configuration Template
# ======================================
#
# INSTRUCTIONS:
# 1. Copy this file to .env
# 2. Replace placeholder values with your actual credentials
# 3. Never commit .env file to version control
# 4. Generate new SECRET_KEY for production
#

# =====================================
# FLASK ENVIRONMENT
# =====================================
# Options: development, production, testing
FLASK_ENV=development

# Enable/disable debug mode (NEVER enable in production!)
FLASK_DEBUG=True

# =====================================
# APPLICATION SECURITY
# =====================================
# Generate a strong secret key with:
# python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-change-this-in-production

# =====================================
# SUPABASE CONFIGURATION
# =====================================
# Get these from: Supabase Dashboard > Settings > API
#
# Project URL format: https://[project-id].supabase.co
SUPABASE_URL=https://your-project-id.supabase.co

# Anon/Public key - starts with eyJ...
SUPABASE_ANON_KEY=your-anon-key-here

# =====================================
# DATABASE CONFIGURATION
# =====================================
# For Local Development (Set USE_LOCAL_DB=True to bypass Supabase Client)
USE_LOCAL_DB=False
LOCAL_DB_NAME=healthcare_portal
LOCAL_DB_USER=postgres
LOCAL_DB_PASSWORD=postgres
LOCAL_DB_HOST=localhost
LOCAL_DB_PORT=5432

# Get these from: Supabase Dashboard > Settings > API
#
# Project URL format: https://[project-id].supabase.co
SUPABASE_URL=https://your-project-id.supabase.co

# =====================================
# SESSION CONFIGURATION
# =====================================
# Session timeout in hours (1-24)
SESSION_TIMEOUT_HOURS=8

# Require HTTPS for cookies (set to True in production with HTTPS)
SESSION_COOKIE_SECURE=False

# =====================================
# PASSWORD POLICY
# =====================================
# Minimum password length (recommended: 8-16)
PASSWORD_MIN_LENGTH=8

# Require specific character types
PASSWORD_REQUIRE_UPPERCASE=True
PASSWORD_REQUIRE_LOWERCASE=True
PASSWORD_REQUIRE_NUMBERS=True
PASSWORD_REQUIRE_SPECIAL=False

# =====================================
# ACCOUNT SECURITY
# =====================================
# Maximum failed login attempts before lockout
MAX_LOGIN_ATTEMPTS=5

# Account lockout duration in minutes
ACCOUNT_LOCKOUT_DURATION=30

# =====================================
# RATE LIMITING
# =====================================
# Format: "number per period" (e.g., "100 per hour", "10 per minute")
RATELIMIT_DEFAULT=100 per hour

# Storage for rate limit data (memory:// for single server, redis:// for distributed)
RATELIMIT_STORAGE_URL=memory://

# API rate limit
API_RATE_LIMIT=1000 per hour

# =====================================
# LOGGING CONFIGURATION
# =====================================
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (ensure directory exists)
LOG_FILE=logs/pdms.log

# =====================================
# PAGINATION & UI
# =====================================
# Number of items per page in lists
ITEMS_PER_PAGE=20

# =====================================
# CSRF PROTECTION
# =====================================
# Enable CSRF protection (recommended: True)
WTF_CSRF_ENABLED=True

# =====================================
# COMPANY INFORMATION
# =====================================
# Customize for your organization
COMPANY_NAME=HealthTech Solutions
SUPPORT_EMAIL=support@healthtechsolutions.com

# =====================================
# API CONFIGURATION
# =====================================
# API version identifier
API_VERSION=v1

# =====================================
# PRODUCTION NOTES
# =====================================
# For production deployment, update these settings:
# - FLASK_ENV=production
# - FLASK_DEBUG=False
# - SECRET_KEY=<generate-new-strong-key>
# - SESSION_COOKIE_SECURE=True (if using HTTPS)
# - PASSWORD_MIN_LENGTH=12
# - PASSWORD_REQUIRE_SPECIAL=True
# - MAX_LOGIN_ATTEMPTS=3
# - LOG_LEVEL=WARNING
